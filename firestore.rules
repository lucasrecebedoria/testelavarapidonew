rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Perfil do usuário (role, email, matricula)
    match /usuarios/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    // Lançamentos de lavagens
    match /lavagens/{lavId} {
      allow read: if request.auth != null;        // todos logados podem ver relatórios
      allow create: if request.auth != null;      // todos logados podem lançar
      // Atualizar/Excluir somente admins
      allow update, delete: if request.auth != null &&
        get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == 'admin';
    }

    // Relatórios agregados mensais (se usados)
    match /relatoriosMensais/{docId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null &&
        get(/databases/$(database)/documents/usuarios/$(request.auth.uid)).data.role == 'admin';
    }
  }
}